cmd paste $cp-p --lf-paste $id

# Open file
cmd open ${{
    case $(file --mime-type "$(readlink -f $f)" -b) in
	application/vnd.openxmlformats-officedocument.spreadsheetml.sheet) localc $fx ;;
	image/vnd.djvu|application/pdf|application/octet-stream|application/postscript) setsid -f zathura $fx >/dev/null 2>&1 ;;
	text/html) $BROWSER $f;;
        text/*|application/json|inode/x-empty) $EDITOR $fx;;
	image/x-xcf) setsid -f gimp $f >/dev/null 2>&1 ;;
	image/svg+xml) display -- $f ;;
	image/*) devour nsxiv-rifle $f ;;
	audio/*) mpv --audio-display=no $f ;;
	video/*) setsid -f mpv $f -quiet >/dev/null 2>&1 ;;
	application/pdf|application/vnd*|application/epub*) setsid -f zathura $fx >/dev/null 2>&1 ;;
	application/pgp-encrypted) $EDITOR $fx ;;
        *) xdg-open $f ;;
    esac
}}

# Make directory
cmd mkdir $mkdir -p "$(echo $* | tr ' ' '\ ')"

# Bulk rename
cmd bulkrename $vidir

# Extract archives
cmd extract ${{
	clear; tput cup $(($(tput lines)/3)); tput bold
	set -f
	printf "%s\n\t" "$fx"
	printf "extract?[y/N]"
	read ans
	[ $ans = "y" ] && aunpack $fx
}}

cmd chmod ${{
  printf "Mode Bits: "
  read ans

  for file in "$fx"
  do
    chmod $ans $file
  done

  lf -remote 'send reload'
}}

cmd on-select &{{
    lf -remote "send $id set statfmt \"$(eza -ld --color=always --total-size "$f")\""
}}

cmd halp ${{ printf "D delete\n t trash\n y copy\n d cut\n p paste\n R bulkrename\n Y yank path\n A rename at the very end\n I rename at the very beginning\n i rename before extension\n a rename after extention\n o mimeopen\n O mimeopen --ask\n n mkdir\n x chmod\n b mark-load\n e open in editor\n . toggle hidden\n W wall\n r reload" |
rofi -dmenu -i -l 20
}}

map D delete
map t trash
map y copy
map d cut
map p paste
map R bulkrename
map E extract
map Y $printf "%s" "$fx" | xclip -selection clipboard
map A rename # at the very end
map I push A<c-a> # at the very beginning
map i push A<a-b><a-b><a-f> # before extention
map a push A<a-b> # after extention
map o &mimeopen $f
map O $mimeopen --ask $f
map m push :mkdir<space>
map x chmod
map b mark-load
map e $$EDITOR $f
map . set hidden!
map w wall
map r reload
map ? halp
