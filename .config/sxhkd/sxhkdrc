#---System Control---#
# Restart hotkey damon
super + shift + x
	killall sxhkd & notify-send "SXHKD config reloaded" && sxhkd &

# Lock the screen
super + alt + l
	betterlockscreen -l

# Lock screen and suspend
super + shift + alt + l
	betterlockscreen -s

# Suspend system
super + shift + s
	loginctl suspend

# Run autorandr
super + shift + a
	autorandr -c

#---Applications---#
# Rofi
super + d 
	rofi -show run

super + shift + d
	rofi-pass

super + e 
	emoji

# Browser
super + b
	qutebrowser

# Bookmarks
super + shift + b
	bm

# Agenda
super + a
	agenda

# Relaunch polybar
super + shift + p
	$HOME/.cofig/polybar/launch.sh

# Launch external editor
super + t
	thundervim

# Printer
super + p
	system-config-printer

# Zathura
super + shift + z
	zathura
